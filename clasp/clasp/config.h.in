namespace Clasp {
@CLASP_DEFINE_ATOMIC@
template <class T> struct Atomic_t { typedef @CLASP_ATOMIC_TYPE@<T> type; };
template <class T>
T compare_and_swap(@CLASP_ATOMIC_TYPE@<T>& in, T oldVal, T newVal) {
	in.compare_exchange_strong(oldVal, newVal);
	return oldVal;
}
typedef uint64_t  uint64;
